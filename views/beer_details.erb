<div class="container">

<div class='beer_details'>
<h1><%= @beer.name %></h1>
<a href="/breweries/<%= @beer.brewery_id %>"><img class="logo_details" src="<%= @beer.brewery.logo %>" alt=""></a>
<img src="<%= @beer.image %>" alt="">

<ul>
  <li>Brewery: <%= @beer.brewery.name %></li>
  <li>Style: <%= @beer.style %></li>
  <li>ABV: <%= @beer.abv %></li>
  <li>IBU: <%= @beer.ibu %></li>
  <% if @beer.avg_rating %>
  <li>Avg Rating: <%= @beer.avg_rating %> out of 5</li>
  <% end %>
  <% if @beer.brewery.avg_rating %>
  <li>Brewery Avg Rating: <%= @beer.brewery.avg_rating %> out of 5</li>
  <% end %>
</ul>

<% if logged_in? %>
<a class="new_review" href="/beer_reviews/new">Add a beer review</a>
<% end %>
</div>

<h2 class="reviews_heading">Reviews</h2>
<div class="details_review">
<% @reviews.each do |review| %>
<p><%= review.body %> By <%= review.user.username %></p>
<% end %>
</div>
</div>