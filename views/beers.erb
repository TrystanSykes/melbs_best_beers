<div class="container">
<h1>Beers</h1>

<div class="user_option">
<% if logged_in? %>
<a href="/beers/new">Add a beer</a>
<% end %>
</div>
<% @beers.each do |beer| %>
<article class='beer'>
<h2>
  <a href="/beers/<%= beer.id %>">
  <%= beer.name %>
  </a>
</h2>
<a href="/beers/<%= beer.id %>">
<img src="<%= beer.image %>" alt="">
</a>
<% if logged_in? %>
<a class="new_review" href="/beer_reviews/new">Add a beer review</a>
<% end %>
</article>
<% end %>
</div>